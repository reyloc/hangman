#!/usr/bin/ruby

def draw_hangman
  puts " Category: #@category\n"
  puts "   __"
  print "  |  |"
  draw_letters(1)
  print "  "
  if @wrongs > 0
    print "O"
  else
    print " "
  end
  print "  |"
  draw_letters(2)
  print " "
  if @wrongs >= 3
    print "\\"
  else
    print " "
  end
  if @wrongs >= 2
    print "|"
  else
    print " "
  end
  if @wrongs >= 4
    print "/"
  else
    print " "
  end
  print " |"
  draw_letters(3)
  print "  "
  if @wrongs >= 2
    print "|"
  else
    print " "
  end
  print "  |"
  draw_letters(4)
  print " "
  if @wrongs >= 5
    print "/ "
  else
    print "  "
  end
  if @wrongs >= 6
    print "\\ |"
  else
    print "  |"
  end
  draw_letters(5)
  puts "   __|__\n"
end

def draw_letters(row)
  print " "
  case row
    when 1
      ('A'..'F').to_a.each {|x| print @guesses.include?(x) ? "  " : "#{x} " }
    when 2
      ('G'..'L').to_a.each {|x| print @guesses.include?(x) ? "  " : "#{x} " }
    when 3
      ('M'..'R').to_a.each {|x| print @guesses.include?(x) ? "  " : "#{x} " }
    when 4
      ('S'..'X').to_a.each {|x| print @guesses.include?(x) ? "  " : "#{x} " }
    when 5
      ('Y'..'Z').to_a.each {|x| print @guesses.include?(x) ? "  " : "#{x} " }
  end
  puts
end

def draw_blanks
  @word.chars.each do |c|
    if @guesses.include?(c.upcase)
      print "#{c.upcase} "
    else
      print "_ "
    end
  end
  puts
end

def draw_picture
  puts
  draw_hangman
  draw_blanks
  puts
end

